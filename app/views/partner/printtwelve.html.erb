<% provide(:title, "Imprimer 12") %>
<div id="mg-graph-identifier">parprint12-gr</div>

<div class="row">
  <div class="col-lg-12">
    <h1>Imprimer 12</h1>
  </div>
</div>

<div class="grid-contener">
    <div class="row">
      <% if @emptyResultSet %>
        <div class="col-sm-12 no-data">
          Désolé, nous n'avons pas trouvé de code barre &nbsp; <i class="glyphicon glyphicon-inbox"></i>
        </div>
      <% end %>
        <% i = 0 %>
        <% @resultSet.each do |result| %>
              <div class="col-sm-6 bc-block-print">
                  <div>
                    <svg id="barcode-<%= i %>"></svg>


                  </div>
                  <%= "#{result['id']}" %>
                  <span id="item-bc-<%= i %>"><%= "#{result['ref_tag']}" %></span> <br>
                  <%= "#{result['step']}" %>
                  <%= "#{result['bsecret_code']}" %> <br>
                  <%= "#{result['dest_email']}" %> <br>
              </div>
              <% i = i + 1 %>
        <% end %>
      </div>

      Nous avons trouvé <span id="nb-lines"><%= i %></span> codes barres.
</div>
