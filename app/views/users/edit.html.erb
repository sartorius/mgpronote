<% provide(:title, "Edit user") %>
<div id="mg-graph-identifier">edituser-gr</div>

<div class="row usr-block">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <div class="crt-block">Paramètres modifiables</div>
      <div class="t-of-use mgs-med-note">
        Le transporteur peut être amené à vous contacter par téléphone pour vous remettre votre colis.
      </div>

      <label>Numéro de téléphone <span id="ck-phone"class="ctr-ck-grp"> - obligatoire</span></label>
      <%= f.text_field :phone, class: 'form-control crt-fill-form', id: 'crt-phone' %>

      <label>Mot de passe <span id="ck-pwd" class="ctr-ck-grp">(min. 7 caractères)</span></label>
      <%= f.password_field :password, class: 'form-control crt-fill-form', placeholder: "Mot de passe", id: 'crt-pwd' %>

      <label>Confirmation du mot de passe <span id="ck-cpwd" class="ctr-ck-grp"> - obligatoire</span></label>
      <%= f.password_field :password_confirmation, class: 'form-control crt-fill-form', placeholder: "Confirmation du mot de passe", id: 'crt-cpwd' %>

      <%= f.submit "Sauvegarder", class: "btn btn-default btn-block", id: "edit-submit" %>
    <% end %>

  </div>
</div>
