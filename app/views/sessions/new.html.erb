<% provide(:title, "Connexion") %>
<h1>Connexion</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>

      <label>Mot de passe</label>
      &nbsp;<%= link_to "(mot de passe oublié)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control', placeholder: "Mot de passe" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Rappelez vous de moi</span>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-default" %>
    <% end %>

    <p>Nouveau ? <%= link_to "Créez un compte dès maintenant !", signup_path %></p>
  </div>
</div>
