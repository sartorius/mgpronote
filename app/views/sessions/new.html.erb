<% provide(:title, "Se connecter") %>
<h1>Connexion</h1>
<br><br><br><br>
<div class="row">

  <div class="col-md-6 sess-block">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.email_field :email, class: 'form-control classy-input', placeholder: "Email" %>

      <label>Mot de passe</label>
      &nbsp;<%= link_to "(mot de passe oublié)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control classy-input', placeholder: "Mot de passe" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Rappelez vous de moi</span>
      <% end %>
      <br>
      <%= f.submit "Connexion", class: "btn btn-default btn-lg btn-block" %>
    <% end %>


  </div>

  <div class="col-md-6 sess-block">

    <div class="pos-center">
      <a href="/signup" class="btn btn-default-light btn-lg btn-block">Créer un compte</a>
    </div>
  </div>
</div>
<br><br><br><br>
